{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2022", "DOM"],
        "outDir": "./lib",
        "declarationDir": "./lib/types"
    },
    "files": ["./src/index.ts"]
}
